<scene>
	<instance name="sphere" path="models/sphere" />
	<instance name="box" path="models/box" />
	<instance name="cylinder" path="models/cylinder" />
	<instance name="cone" path="models/cone" />
	
	<transform>
		<set>
			<scale> 72 72 72 </scale> <!-- humanoid of height 72 -->
			<translate> 0 -36 0 </translate>
		</set>
		<group name="unit-height-humanoid">
			<transform> <!-- scale humanoid down to height 1 so that height can be adjusted easily above -->
				<set>
					<scale> 0.0125 0.0125 0.0125</scale>
				</set>
				<group>
					<group name="lowerbody">
						<transform name="leftleg"> <!-- move leg into correct position -->
							<set>
								<translate>5 0 0</translate>
							</set>
							<group name="leg">
								<transform name="shin">
									<set>
										<scale>1 20 1 </scale>					
									</set>
									<object instanceof="cylinder">
										<material>
											<color>1 0 0</color>
										</material>
									</object>			
								</transform>
								<transform> <!-- move knee into correct position with respect to shin -->
									<set>
										<translate>0 21 0 </translate>
									</set>
									<transform name="knee">
										<set>
											<scale>2 2 2 </scale>										
										</set>
										<object instanceof="sphere">
											<material>
												<color>0 1 0</color>
											</material>
										</object>			
									</transform>
								</transform>
								<transform> <!-- move thigh into correct position with respect to knee -->
									<set>
										<translate>0 22 0 </translate>
									</set>
									<transform name="thigh">
										<set>
											<scale>1 20 1 </scale>										
										</set>
										<object instanceof="cylinder">
											<material>
												<color>1 0 0</color>
											</material>
										</object>			
									</transform>
								</transform>			
								<transform> <!-- move hip into correct position to join to thigh -->
									<set>
										<translate>0 42 0 </translate>
									</set>
									<transform name="hip">
										<set>
											<scale>2 2 2 </scale>											
										</set>
										<object instanceof="sphere">
											<material>
												<color>0 1 0</color>
											</material>
										</object>			
									</transform>
								</transform>
							</group>
						</transform>
						
						<transform name="rightleg"> <!-- move leg into correct position -->
							<set>
								<translate>-5 0 0</translate> 
							</set>
							<group copyof="leg" />			
						</transform>
					</group>
					
					<group name="upperbody">
						<transform>
							<set>
								<translate> 0 42 0 </translate> <!-- move entire upper body into correct position -->
							</set>			
							<group>
								<transform name="pelvis">
									<set>
										<scale>1 10 1</scale>
										<rotate>90 0 0 1</rotate>
										<translate>5 0 0</translate>
									</set>
									<object instanceof="cylinder">
										<material>
											<color>1 1 0</color>
										</material>
									</object>
								</transform>
								
								<transform name="torso">
									<set>
										<scale>1 25 1 </scale>
										<translate>0 2 0 </translate>
									</set>
									<object instanceof="cylinder">
										<material>
											<color>0 1 0 </color>
										</material>
									</object>
								</transform>	
								
								<transform name="shoulder">
									<set>
										<scale>1 20 1</scale>
										<rotate>90 0 0 1</rotate>
										<translate>10 27 0</translate>
									</set>
									<object instanceof="cylinder">
										<material>
											<color>1 1 0 </color>
										</material>
									</object>
								</transform>	
								<transform name="lefthand">
									<set>
										<rotate>165 0 0 1</rotate> <!--M pose -->
										<translate>10 27 0</translate> <!-- move entire hand into correct position -->
									</set>
									<transform>
										<set> <!-- empty transform node, so that if entire arm is to be rotated about shoulder this node is available -->
										</set>
										<group>
											<transform>
												<set>
													<translate>0 -10 0 </translate> <!--move entire arm into correct position with respect to shoulder -->
												</set>
												<transform name="arm">
													<set>
														<scale>1 10 1 </scale>
														
													</set>
													<object instanceof="cylinder">
														<material>
															<color>1 0 0</color>
														</material>
													</object>			
												</transform>
											</transform>
											<transform>
												<set>
													<translate>0 -11 0 </translate> <!-- move elbow to join arm -->
												</set>
												<transform name="leftelbow">
													<set>
														<scale>2 2 2 </scale>
														
													</set>
													<object instanceof="sphere">
														<material>
															<color>0 1 0</color>
														</material>
													</object>			
												</transform>	
											</transform>		
											<transform>
												<set>
													<rotate>90 0 0 1</rotate> <!--M pose -->
													<translate>0 -12 0 </translate> <!-- move forearm to join elbow -->
												</set>												
												<transform name="leftforearm">
													<set>
														<scale>1 10 1 </scale>
														<translate>0 -10 0 </translate>	<!-- so that upper tip of cylinder is at origin -->
													</set>
													<object instanceof="cylinder">
														<material>
															<color>1 0 1</color>
														</material>
													</object>			
												</transform>
											</transform>
										</group>
									</transform>
								</transform>
								<transform name="righthand">
									<set>
										<rotate>-165 0 0 1</rotate> <!--M pose -->
										<translate>-10 27 0</translate> <!-- move entire hand into correct position -->
									</set>
									<transform name="righthand">
										<set> <!-- empty transform node, so that if entire arm is to be rotated about shoulder this node is available -->
										</set>
										<group>
											<transform>
												<set>
													<translate>0 -10 0 </translate> <!--move entire arm into correct position with respect to shoulder -->
												</set>
												<transform name="rightarm">
													<set>
														<scale>1 10 1 </scale>
														
													</set>
													<object instanceof="cylinder">
														<material>
															<color>1 0 0</color>
														</material>
													</object>			
												</transform>
											</transform>
											<transform>
												<set>
													<translate>0 -11 0 </translate> <!-- move elbow to join arm -->
												</set>
												<transform name="rightelbow">
													<set>
														<scale>2 2 2 </scale>
														
													</set>
													<object instanceof="sphere">
														<material>
															<color>0 1 0</color>
														</material>
													</object>			
												</transform>	
											</transform>		
											<transform>
												<set>
													<rotate>-90 0 0 1</rotate> <!--M pose -->
													<translate>0 -12 0 </translate> <!-- move forearm to join elbow -->
												</set>												
												<transform name="rightforearm">
													<set>
														<scale>1 10 1 </scale>
														<translate>0 -10 0 </translate>	<!-- so that upper tip of cylinder is at origin -->
													</set>
													<object instanceof="cylinder">
														<material>
															<color>1 0 1</color>
														</material>
													</object>			
												</transform>
											</transform>
										</group>
									</transform>
								</transform>
							</group>
						</transform>		
					</group>
					
					<group name="headneck">
						<transform>
							<set>
								<translate>0 70 0 </translate>
							</set>
							
							<group>
								<transform name="neck">
									<set>
										<scale>1 5 1 </scale>
									</set>
									<object instanceof="cylinder">
										<material>
											<color> 1 0 0 </color>
										</material>
									</object>
								</transform>
										
								<transform name="head">
									<set>
										<scale> 3.2 3.5 3.2</scale>
										<translate>0 8 0 </translate>
									</set>
									<object instanceof="sphere">
										<material>
											<color> 1 1 0 </color>
										</material>
									</object>
								</transform>			
							</group>
						</transform>
					</group>
				</group>
			</transform>
		</group>
	</transform>
</scene>